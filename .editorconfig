# .editorconfig

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 3
trim_trailing_whitespace = true

# Specific settings for TypeScript files
[*.ts]
indent_style = space
indent_size = 3

# Optionally include TypeScript JSX files too
[*.tsx]
indent_style = space
indent_size = 3

[*.py]
indent_style = space
indent_size = 3
